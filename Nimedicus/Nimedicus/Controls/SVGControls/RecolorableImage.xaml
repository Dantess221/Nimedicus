<recolorableImages:BaseRecolorableImage 
             x:Class="Nimedicus.Controls.SVGControls.RecolorableImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:recolorableImages="clr-namespace:Nimedicus.Controls.SVGControls"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <recolorableImages:BaseRecolorableImage.Template>
        <ControlTemplate TargetType="recolorableImages:RecolorableImage">
            <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                  VerticalAlignment="{TemplateBinding VerticalAlignment}">

                <Image x:Name="img"
                       Width="{TemplateBinding Width}"
                       Height="{TemplateBinding Height}"
                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                       Stretch="{TemplateBinding Stretch}" />

            </Grid>
        </ControlTemplate>
    </recolorableImages:BaseRecolorableImage.Template>

    </recolorableImages:BaseRecolorableImage>


